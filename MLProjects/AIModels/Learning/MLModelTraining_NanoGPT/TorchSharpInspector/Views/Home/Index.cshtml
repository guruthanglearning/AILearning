<script>
function validateTorchSharp() {
    const button = event.target;
    button.disabled = true;
    button.innerHTML = 'üîÑ Validating...';
    
    fetch('/Home/ValidateTorchSharp')
        .then(response => response.json())
        .then(data => {
            alert('TorchSharp Validation Result:\n\n' + data.message);
            if (data.isValid) {
                location.reload();
            }
        })
        .catch(error => {
            alert('Error validating TorchSharp:\n' + error);
        })
        .finally(() => {
            button.disabled = false;
            button.innerHTML = 'üîç Validate Installation';
        });
}

function refreshData() {
    location.reload();
}

function runSystemDiagnostics() {
    fetch('/Home/SystemDiagnostics')
        .then(response => response.json())
        .then(data => {
            if (data.error) {
                alert('Error running diagnostics:\n' + data.error);
            } else {
                const diagnosticsInfo = 
                    `System Diagnostics Results:\n\n` +
                    `Processor: ${data.processorName}\n` +
                    `Cores: ${data.processorCores}\n` +
                    `Total Memory: ${data.totalMemoryMB} MB\n` +
                    `Available Memory: ${data.availableMemoryMB} MB\n` +
                    `OS: ${data.operatingSystem}\n` +
                    `TorchSharp: ${data.torchSharpVersion}\n` +
                    `CUDA Available: ${data.cudaAvailable ? 'Yes' : 'No'}\n` +
                    `Available Devices: ${data.availableDevices.join(', ')}`;
                
                alert(diagnosticsInfo);
                console.log('Full System Diagnostics:', data);
            }
        })
        .catch(error => {
            alert('Error running diagnostics:\n' + error);
        });
}
</script>

