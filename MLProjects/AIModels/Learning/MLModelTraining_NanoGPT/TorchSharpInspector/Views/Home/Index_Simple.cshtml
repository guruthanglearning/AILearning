@{
    ViewData["Title"] = "TorchSharp Inspector";
}

<div class="container">
    <div class="row">
        <div class="col-12 text-center">
            <h1 class="display-4 text-primary">üîç TorchSharp Inspector</h1>
            <p class="lead">Comprehensive model analysis and diagnostic tools</p>
            <hr>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Application Status</h5>
                </div>
                <div class="card-body">
                    <p><strong>Message:</strong> @ViewBag.Message</p>
                    <p><strong>Version:</strong> @ViewBag.Version</p>
                    <p><strong>Environment:</strong> @ViewBag.Environment</p>
                    <p><strong>Timestamp:</strong> @ViewBag.Timestamp</p>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mt-4">
        <div class="col-12 text-center">
            <h3>Available Features</h3>
            <div class="row">
                <div class="col-md-4 mb-3">
                    <div class="card border-success">
                        <div class="card-body">
                            <h5 class="card-title text-success">System Diagnostics</h5>
                            <p class="card-text">Hardware and system analysis</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card border-info">
                        <div class="card-body">
                            <h5 class="card-title text-info">Model Analysis</h5>
                            <p class="card-text">Deep model inspection</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card border-warning">
                        <div class="card-body">
                            <h5 class="card-title text-warning">Performance Testing</h5>
                            <p class="card-text">Benchmarks and profiling</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mt-4">
        <div class="col-12 text-center">
            <div class="alert alert-info">
                <h4>üöÄ Quick Links</h4>
                <a href="/api-docs" class="btn btn-primary">API Documentation</a>
                <a href="/health" class="btn btn-success">Health Check</a>
                <a href="/api/version" class="btn btn-info">Version Info</a>
            </div>
        </div>
    </div>
</div>